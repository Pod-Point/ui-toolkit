{
  "name": "frontend-framework",
  "version": "0.1.0",
  "description": "Rapid prototyping framework by POD Point",
  "author": "Mike Francis <mike.francis@pod-point.com>",
  "license": "Apache-2.0",
  "scripts": {
    "build:docs": "rsync -r build docs && browser-sync reload",
    "css:sass": "node-sass --source-map=true src/scss -o build/css",
    "css:autoprefix": "postcss --use autoprefixer --autoprefixer.browsers '> 5%' -o build/css/style.css build/css/style.css",
    "css:minify": "cssnano --sourcemap build/css/style.css build/css/style.css",
    "build:css": "npm run css:sass && npm run css:autoprefix && npm run css:minify",
    "build:js": "NODE_ENV=development webpack --progress --colors && npm run compile:js",
    "compile:js": "NODE_ENV=production babel ./src/js/modules -d ./build/js",
    "img:copy": "rsync -r src/img build",
    "build:img": "npm run img:copy",
    "browser-sync": "browser-sync start --server docs",
    "clean": "rm -rf build docs/build",
    "build": "npm run clean && npm run build:js && npm run build:css && npm run build:img && npm run build:docs",
    "watch": "watch 'npm run build' src/* & npm run browser-sync"
  },
  "dependencies": {
    "@pod-point/dom-module-loader": "^1.2.0",
    "@pod-point/dom-ops": "^1.3.1",
    "@pod-point/module-loader": "^2.2.0",
    "@pod-point/utils": "^1.5.0",
    "babel-cli": "^6.6.5",
    "bootstrap-sass": "^3.3.6",
    "dom-delegate": "^2.0.3"
  },
  "devDependencies": {
    "autoprefixer": "^6.3.1",
    "browser-sync": "^2.11.1",
    "cssnano-cli": "^1.0.3",
    "node-sass": "^3.4.2",
    "postcss-cli": "^2.4.1",
    "uglify-js": "^2.6.1",
    "watch": "^0.17.1",
    "webpack": "^1.12.12",
    "babel-core": "^6.0.20",
    "babel-loader": "^6.0.1",
    "babel-preset-es2015": "^6.0.15",
    "babel-preset-stage-2": "^6.0.15"
  }
}
